@model BlogViewModel


<div class="row my-3">
    <div class="col-md-6">
        <h3>Bloglar</h3>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Admin/Blogs/Add/" class="btn btn-outline-primary">Yeni Blog</a>
    </div>
</div>

<table class="table table-bordered table-striped table-hover text-center">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Tarih</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model.Blogs)
        {
            <tr>
                <td scope="row">@blog.Id</td>
                <td>@blog.Title</td>
                <td>@blog.Date.GetDateTimeFormats()[0]</td>
                <td><a class="btn btn-success btn-sm">Yorumlar</a></td>
                <td><a class="btn btn-warning btn-sm text-white">Güncelle</a></td>
                <td><a class="btn btn-danger btn-sm">Sil</a></td>
            </tr>
        }
    </tbody>
</table>