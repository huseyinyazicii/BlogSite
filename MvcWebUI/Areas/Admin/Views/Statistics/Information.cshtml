@model StatisticViewModel

<div class="row my-3">
    <div class="col-md-6">
        <h3>İstatistik Bilgileri</h3>
    </div>
</div>

<div class="row text-white">
    <div class="col-xl-3 col-md-4 col-sm-6 mb-3">
        <div class="text-center shadow p-4" style="background-color: #f1c0e8; border-radius: 10px">
            <h3 class="mb-2">Blog Sayısı</h3>
            <h3>@Model.NumberOfBlogs</h3>
        </div>
    </div>
    <div class="col-xl-3 col-md-4 col-sm-6 mb-3">
        <div class="text-center shadow p-4" style="background-color: #ffcfd2; border-radius: 10px">
            <h3 class="mb-2">Yorum Sayısı</h3>
            <h3>@Model.NumberOfComments</h3>
        </div>
    </div>
    <div class="col-xl-3 col-md-4 col-sm-6 mb-3">
        <div class="text-center shadow p-4" style="background-color: #cfbaf0; border-radius: 10px">
            <h3 class="mb-2">Kategori Sayısı</h3>
            <h3>@Model.NumberOfCategories</h3>
        </div>
    </div>
    <div class="col-xl-3 col-md-4 col-sm-6 mb-3">
        <div class="text-center shadow p-4" style="background-color: #a3c4f3; border-radius: 10px">
            <h3 class="mb-2">Mesaj Sayısı</h3>
            <h3>@Model.NumberOfMessages</h3>
        </div>
    </div>
    <div class="col-xl-3 col-md-4 col-sm-6 mb-3">
        <div class="text-center shadow p-4" style="background-color: #90dbf4; border-radius: 10px">
            <h3 class="mb-2">Yazar Sayısı</h3>
            <h3>@Model.NumberOfWriters</h3>
        </div>
    </div>
</div>