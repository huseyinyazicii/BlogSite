@model WriterData

<div class="row my-3">
    <div class="col-md-6">
        <h3>Yazar Ekle</h3>
    </div>
</div>

<form asp-action="Add" asp-controller="Writers" asp-area="Admin" method="post">
    <div class="mb-3 form-group">
        <label asp-for="FirstName" class="form-label">İsim</label>
        <input type="text" class="form-control" asp-for="FirstName">
        <span class="form-text text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="LastName" class="form-label">Soyisim</label>
        <input type="text" class="form-control" asp-for="LastName">
        <span class="form-text text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">
        <span class="form-text text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Password" class="form-label">Şifre</label>
        <input type="password" class="form-control" asp-for="Password">
        <span class="form-text text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="text-center"><button type="submit" class="btn btn-primary">Ekle</button></div>
</form>