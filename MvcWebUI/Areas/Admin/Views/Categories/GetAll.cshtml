@model CategoryViewModel

<div class="row my-3">
    <div class="col-md-6">
        <h3>Kategoriler</h3>
    </div>
    <div class="col-md-6 text-end">
        <a href="/Admin/Categories/Add" class="btn btn-outline-primary">Yeni Kategori</a>
    </div>
</div>

<table class="table table-bordered table-striped table-hover text-center">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsim</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td scope="row">@category.Id</td>
                <td>@category.Name</td>
                <td><a href="/Admin/Categories/Update/@category.Id" class="btn btn-warning btn-sm text-white">Güncelle</a></td>
                <td><a href="/Admin/Categories/Delete/@category.Id" class="btn btn-danger btn-sm">Sil</a></td>
            </tr>
        }
    </tbody>
</table>