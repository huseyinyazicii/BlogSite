@model CategoryData

<div class="row my-3">
    <div class="col-md-6">
        <h3>Kategori Güncelle</h3>
    </div>
</div>

<form asp-action="Update" asp-controller="Categories" asp-area="Admin" method="post">
    <div class="mb-3 form-group">
        <label asp-for="Name" class="form-label">Kategori İsmi</label>
        <input type="text" class="form-control" asp-for="Name">
        <span class="form-text text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="text-center"><button type="submit" class="btn btn-primary">Güncelle</button></div>
</form>