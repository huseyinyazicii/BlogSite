@model CommentViewModel

<div class="comment bg-white py-2">
    <h1 class="text-center p-3">Yorumlar</h1>

    @foreach (var comment in Model.Comments)
    {
        <div class="card mb-3 px-3" style="border: none;">
            <div class="row g-0" style="background-color: #EEEEEE;">
                <div class="col-md-3 text-center my-auto">
                    <i class="far fa-user-circle" style="font-size: 100px;"></i>
                    <!--<img src="images/user.png" class="img-fluid rounded-start" style="width: 100px; height: 100px;" alt="...">-->
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                        <h5 class="card-title h2">@comment.UserName</h5>
                        <p class="card-text" style="font-size:12px;">@comment.Content</p>
                        <p class="card-text"><small class="text-muted" style="font-size:10px">@comment.Date</small></p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mx-3 my-5">
        <form asp-controller="Blogs" asp-action="AddComment" method="POST">
            <h1 class="py-3">Yorum Yap</h1>
            <div class="mb-3">
                <input asp-for="Comment.UserName" type="text" class="form-control" placeholder="İsminiz.." style="font-size: 15px;">
                <span class="text-danger" asp-validation-for="Comment.UserName"></span>
            </div>
            <div class="mb-3">
                <textarea asp-for="Comment.Content" class="form-control" rows="3" placeholder="Yorumunuz.." style="font-size: 15px;"></textarea>
                <span class="text-danger" asp-validation-for="Comment.Content"></span>
            </div>
            <input asp-for="Comment.BlogId" type="hidden" value="@Model.BlogId" />
            <div class="text-center">
                <input type="submit" value="Gönder" class="btn">
            </div>
        </form>
    </div>
</div>